<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0">

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:onClick="aboutLauncher"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/about"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/aboutText"
                android:text="About"
                android:textSize="18sp"
                android:layout_marginStart="20dp"
                android:textColor= "#4e4d4d"
                android:layout_toEndOf="@+id/about"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <View
            android:layout_marginTop="5dp"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"/>

        <RelativeLayout
            android:onClick="rateApp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/rateApp"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_star_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/rateText"
                android:text="Rate this app"
                android:textSize="18sp"
                android:layout_marginStart="20dp"
                android:textColor= "#4e4d4d"
                android:layout_toEndOf="@+id/rateApp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:onClick="emailLauncher"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/contact"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_feedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/feedbackText"
                android:text="Feedback"
                android:textSize="18sp"
                android:layout_marginStart="20dp"
                android:textColor= "#4e4d4d"
                android:layout_toEndOf="@+id/contact"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:onClick="shareApp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/share"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/shareText"
                android:text="Share this app"
                android:textSize="18sp"
                android:layout_marginStart="20dp"
                android:textColor= "#4e4d4d"
                android:layout_toEndOf="@+id/share"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <View
            android:layout_marginTop="5dp"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"/>

        <RelativeLayout
            android:onClick="openVideos"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/video"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/videosText"
                android:text="My videos"
                android:textSize="18sp"
                android:layout_marginStart="20dp"
                android:textColor= "#4e4d4d"
                android:layout_toEndOf="@+id/video"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:onClick="autoplay"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/autoplay"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/autoPlayText"
                android:text="Autoplay videos"
                android:textSize="18sp"
                android:layout_marginStart="20dp"
                android:textColor= "#4e4d4d"
                android:layout_toEndOf="@+id/autoplay"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <CheckBox
                android:id="@+id/autoPlayBox"
                android:layout_marginEnd="20dp"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>



</RelativeLayout>
